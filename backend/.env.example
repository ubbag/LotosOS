# Server Configuration
NODE_ENV=development
PORT=3000
APP_NAME="Lotos SPA"
APP_VERSION=1.0.0

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/lotos_spa"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-in-production-to-something-very-long"
JWT_EXPIRATION=24h

# Redis (for job queues)
REDIS_URL="redis://localhost:6379"

# SMS Configuration
SMS_PROVIDER=mock
SMS_API_KEY=""
SMS_SENDER_NAME="LotosSPA"

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER="your-email@gmail.com"
EMAIL_PASSWORD="your-app-specific-password"

# Payment Gateway
PAYMENT_PROVIDER=mock
PAYMENT_WEBHOOK_SECRET="your-webhook-secret-change-in-production"
APP_URL="http://localhost:3000"
